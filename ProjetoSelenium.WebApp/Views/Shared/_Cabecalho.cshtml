@{ 
    var usuarioLogado = Context.Session.Get<Usuario>("usuarioLogado");
}

<div class="navbar-fixed">
    <nav class="white z-depth-2" role="navigation">
        <div class="nav-wrapper">
            <div class="container">
                <a id="logo-container" asp-controller="Home" asp-action="Index" class="brand-logo">
                    <span>Leilões</span>
                    <span>online</span>
                </a>

                <!-- Dropdown Structure -->
                <ul id="dropdown1" class="dropdown-content">
                    <li><a href="#!">Meu Perfil</a></li>
                    <li class="divider"></li>
                    <li><a id="logout" asp-controller="Autenticacao" asp-action="Logout">Logout</a></li>
                </ul>
                <ul class="right hide-on-med-and-down">
                    @if (usuarioLogado == null)
                    {
                        <li><a asp-controller="Autenticacao" asp-action="Login">Login</a></li>
                    } else {
                        <li><a asp-controller="Interessadas" asp-action="Index">Dashboard</a></li>
                        if (usuarioLogado.Interessada == null)
	                    {
                        <li><a asp-controller="Leiloes" asp-action="Index">Leilões</a></li>
                        <li><a asp-controller="Usuarios" asp-action="Index">Usuários</a></li>
	                    }
                        <li class="center-align">
                            <a id="meu-perfil" class="dropdown-trigger" href="#" data-target="dropdown1">
                                <i class="material-icons large">account_circle</i>
                                <i class="material-icons">arrow_drop_down</i>
                            </a>
                        </li>
                    }
                </ul>

                <ul id="nav-mobile" class="sidenav">
                    <li><a asp-controller="Leiloes" asp-action="Index">Leilões</a></li>
                    <li><a href="#">Usuários</a></li>
                    <li><a href="#">Perfil</a></li>
                </ul>
                <a href="#" data-target="nav-mobile" class="sidenav-trigger"><i class="material-icons">menu</i></a>
            </div>
        </div>
    </nav>
</div>